#!/usr/bin/env bash
set -euo pipefail

# JS7 Controller starter

JS7_HOME="$(cd "${0%/*}/../bin/.." && pwd)"
export JS7_HOME
. "$JS7_HOME/bin/internal/set-context.sh"
declare classpathString java  # returned by set-context.sh

config=/var/opt/js7/controller/config
data=/var/opt/js7/controller/data
httpPort=4444
httpsPort=4443
controllerOptions=()
javaOptions=(
  -XX:+UseStringDeduplication
  -XX:MaxJavaStackTraceDepth=999999999)
log4jAsync=false

for arg in "$@"; do :
  case "$arg" in
    -J*)
      a="${arg#-J}"
      javaOptions+=("$a")
      ;;
    --java-option=*)
      a="${arg#*=}"
      javaOptions+=("$a")
      ;;
    --directory=*)
      config="${arg#*=}"/config
      data="${arg#*=}"/data
      ;;
    --config-directory=*)
      config="${arg#*=}"
      ;;
    --data-directory=*)
      data="${arg#*=}"
      ;;
    --http-port=*)
      httpPort="${arg#*=}"
      ;;
    --https-port=*)
      httpsPort="${arg#*=}"
      ;;
    --log4j-async)
      log4jAsync=true
      ;;
    --rmx-port=*)
      a="${arg#*=}"
      javaOptions+=(
        "-Dcom.sun.management.jmxremote"
        "-Dcom.sun.management.jmxremote.ssl=false"
        "-Dcom.sun.management.jmxremote.authenticate=false"
        "-Dcom.sun.management.jmxremote.port=$a")
      ;;
    --debug-port=*)
      a="${arg#*=}"
      javaOptions+=("-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=$a")
      ;;
    *)
      controllerOptions+=("$arg")
  esac
done

if [ ! -d "$config" ]; then :
  echo "No such directory: --config-directory=$config"
  exit 1
fi
config="$(toSystemPath "$config")"

if [ ! -d "$data" ]; then :
  echo "No such directory: --data-directory=$data"
  exit 1
fi
data="$(toSystemPath "$data")"

logs="$data/logs"
[ -d "$logs" ] || mkdir "$logs"

stateDir="$data/state"
[ -d "$stateDir" ] || mkdir "$stateDir"

tmpDir="$data/tmp"

# Copy stdout and stderr to stdouterr.log
if [ -e "$logs/stdouterr.log" ]; then
  echo >>"$logs/stdouterr.log" \
    -e "\n\n━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
fi
exec &> >(exec tee -a "$logs"/stdouterr.log)

javaOptions+=("-Djs7.log4j.directory=$logs")  # Used in logging configuration
if [ -f "$config/log4j2.xml" ]; then :
  javaOptions+=("-Dlog4j.configurationFile=$config/log4j2.xml")
fi
if $log4jAsync; then :
  javaOptions+=("-Dlog4j2.contextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector")
  javaOptions+=("-Dlog4j2.asyncLoggerWaitStrategy=Block")  # Uses less CPU when idling than default "Timeout"
  javaOptions+=("-Djs7.log4j.immediateFlush=false")
fi
if [ "$JAVA_VERSION" -ge 13 ]; then
  [ -d "$data/java-shared-archives" ] || mkdir "$data/java-shared-archives"
  jsaFile="$data/java-shared-archives/js7-controller-$(cat "$JS7_HOME/VERSION").jsa"
  if [ -f "$jsaFile" ]; then
    javaOptions+=("-XX:SharedArchiveFile=$jsaFile" -Xshare:auto)
  else
    javaOptions+=("-XX:ArchiveClassesAtExit=$jsaFile" -Xshare:auto)
  fi
fi

controllerOptions+=("--config-directory=$config" "--data-directory=$data")
[ -z "$httpPort" ] || controllerOptions+=("--http-port=$httpPort")
[ -z "$httpsPort" ] || controllerOptions+=("--https-port=$httpsPort")

execute=(
  "$java"
  "${javaOptions[@]}"
  -classpath "$classpathString"
  js7.controller.ControllerMain
  "${controllerOptions[@]}")

while true; do
  rm -rf "$tmpDir"

  log "${execute[@]}"
  "${execute[@]}" &

  pid=$!
  pidFile="$stateDir/pid"
  echo "$pid" >"$pidFile"
  log PID $pid

  terminate() {
    echo "⚡ $1"
    log "$1: ShutDown JS7 Controller"
    # Add some seconds to start Java with ControllerClientMain
    #local terminateTimeout=30
    local shutdownCmd='{ "TYPE": "ShutDown" }'
    if [ "$SHELL" = "/bin/bash" ]; then
      "$JS7_HOME/bin/js7-client" --data-directory="$data" "$shutdownCmd" &
    else
      "$java" -Xmx50m \
        -Dlog4j.configurationFile=js7/controller/client/main/log4j2.xml \
        -classpath "$classpathString" \
        js7.controller.client.main.ControllerClientMain \
        --data-directory="$data" \
        http://127.0.0.1:"$httpPort" \
        "$shutdownCmd" \
        >/dev/null &
    fi
    #(sleep $terminateTimeout && kill $pid) &
    #killer=$!
    wait $pid
    returnCode=$?
    #kill $killer
    #wait $killer
  }

  returnCode=
  trap "terminate SIGTERM" SIGTERM
  trap "terminate SIGINT" SIGINT
  if wait $pid; then
    # After a trapped signal, $? is 128+signal, but not the real $returnCode (only in Docker?)
    returnCode=${returnCode:-$?}
    log "JS7 Controller has been shut down"
  else
    returnCode=${returnCode:-$?}
    log "JS7 Controller exited with exit code $returnCode"
  fi
  rm "$pidFile"
  trap - SIGTERM SIGINT

  if [[ $returnCode -ne 97 ]] && [[ $returnCode -ne 98 ]]; then
    exit $returnCode
  fi
  log "Starting again"
done

#!/usr/bin/env bash
set -euo pipefail

cd "${0%/*}"
# This script is located in bin, but there is also a compatibility link in the parent directory.
cd ../bin/.. &>/dev/null || false

rm -f target/build.log
if [ "$OSTYPE" = "cygwin" ]; then
  exec cmd /c bin/sbt-batch.cmd "$@"
else
  # See also .sbtopts files
  if [[ -t 1 ]]; then
    export JAVA_OPTS="-Dsbt.ci=true ${JAVA_OPTS:-}"
  else
    export JAVA_OPTS="-Dsbt.log.noformat=true ${JAVA_OPTS:-}"
  fi
  exec sbt -batch "$@"
fi

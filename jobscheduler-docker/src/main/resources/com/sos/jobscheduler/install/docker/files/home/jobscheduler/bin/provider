#!/usr/bin/env bash
set -e

config=/var/opt/jobscheduler/provider/config
data=/var/opt/jobscheduler/provider/data
hprof=$data/logs/OutOfMemoryError.hprof

if [ "$HOME" = "/home/jobscheduler" ]; then
  [ -e "$HOME/config" ] || ln -ns $config "$HOME/config"
  [ -e "$HOME/data" ] || ln -ns $data "$HOME/data"
fi

exec /opt/jobscheduler/bin/jobscheduler-provider \
  -log4j-async \
  -J"-XX:+HeapDumpOnOutOfMemoryError" -J"-XX:HeapDumpPath=$hprof" \
  "$@"

#!/usr/bin/env bash
set -e
cd "$(dirname -- "$0")"

[ -d "volumes/testMasterAgent" ] || mkdir volumes/testMasterAgent

docker run \
  --publish=127.0.0.1:4444:4444 \
  --publish=127.0.0.1:5000:5000 \
  --volume="$PWD/volumes/testMasterAgent":/var/opt/jobscheduler/testMasterAgent \
  --rm --name=TestMasterAgent \
  -ti \
  jobscheduler \
  testMasterAgent "$@"

<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
  <appenders>
    <console name="console" target="SYSTEM_ERR">
      <patternLayout pattern="%highlight{%d{EE HH:mm:ss.SSS} %-5level{INFO=info, DEBUG=debug, TRACE=trace} %logger - %message}{WARN=magenta}%n"/>
    </console>
    <rollingRandomAccessFile name="file"
                             fileName="target/build.log"
                             filePattern="target/build-%d{yyyy-MM-dd}-%i.log.gz"
                             immediateFlush="false">
      <patternLayout pattern="%d{EE HH:mm:ss.SSS} %-5level{INFO=info, DEBUG=debug, TRACE=trace} %logger - %message%n"
                     charset="UTF-8"/>
      <policies>
        <onStartupTriggeringPolicy/>
      </policies>
    </rollingRandomAccessFile>
  </appenders>
  <loggers>
    <root level="WARN">
      <appenderRef level="OFF" ref="console"/>
      <appenderRef level="DEBUG" ref="file"/>
    </root>
    <logger level="DEBUG" name="jobscheduler"/>
  </loggers>
</configuration>

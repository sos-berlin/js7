#!/usr/bin/env bash
set -euo pipefail

bin=$(cd "${0%/*}" && pwd)
pids=""

"$bin"/kill-and-restart-monkey \
  --container=js7-controller \
  --up-exp=7 \
  --down-exp=7 \
  --cursor-line=1 &
pids+="$pids $!"

"$bin"/kill-and-restart-monkey \
  --container=js7-backup-controller \
  --up-exp=7  \
  --down-exp=5 \
  --cursor-line=2 &
pids+="$pids $!"

"$bin"/kill-and-restart-monkey \
  --container=cluster-watch \
  --up-exp=7  \
  --down-exp=1 \
  --cursor-line=3 &
pids+="$pids $!"

trap 'set +e; kill -- -$$ >/dev/null || kill $pids; echo -e "\n\n\n\n\e[J"' EXIT
wait

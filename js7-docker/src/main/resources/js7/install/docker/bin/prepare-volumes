#!/usr/bin/env bash
set -euo pipefail

cd "$(cd "$(realpath "${0%/*}")"/../../build/bin/../.. && pwd)"

rm -rf volumes/{controller,backup-controller,provider,subagent-1-a,subagent-1-b,subagent-2-a}/data/{cache,work}
mkdir -p -m 700 volumes/{controller,backup-controller,provider,subagent-1-a,subagent-1-b,subagent-2-a}/config/private
mkdir -p volumes/{controller,backup-controller,provider,subagent-1-a,subagent-1-b,subagent-2-a}/data/{logs,state,work}
mkdir -p volumes/provider/config/{live,order-generators}
mkdir -p volumes/subagent-{1-a,1-b,2-a}/config/executables

cp -Rrnv build/volumes/* volumes || true
( umask go-rwx
  cp -nv volumes/controller/config/private/* volumes/backup-controller/config/private || true
)

chmod -R go-wrx volumes/*/config/private
chmod -R +x volumes/subagent-*/config/executables/*

build/bin/generate-certificate --install
build/bin/prepare-pgp-keys

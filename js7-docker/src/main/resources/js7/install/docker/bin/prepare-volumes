#!/usr/bin/env bash
set -euo pipefail

cd "$(cd "$(realpath "${0%/*}")"/../../build/bin/../.. && pwd)"

mkdir -p -m 700 volumes/{controller,backup-controller,provider,agent-1,agent-2}/config/private
mkdir -p volumes/{controller,backup-controller,provider,agent-1,agent-2}/data/{logs,state,tmp}
mkdir -p volumes/provider/config/{live,order-generators}
mkdir -p volumes/agent-{1,2}/config/executables

cp -Rrnv build/volumes/* volumes || true
( umask go-rwx
  cp -nv volumes/controller/config/private/* volumes/backup-controller/config/private || true
)

chmod -R go-wrx volumes/*/config/private
chmod -R +x volumes/agent-*/config/executables/*

build/bin/generate-certificate --install
build/bin/prepare-pgp-keys

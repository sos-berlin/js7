#!/usr/bin/env bash
set -euo pipefail

export JS7_HOME=/opt/js7
. "$JS7_HOME"/bin/internal/set-context.sh
declare classpathString java
declare -a standardJavaOptions

directory=/var/opt/js7/testControllerAgent
log4jXml="js7/tests/log4j2.xml"   # Java resource
javaOptions=()
args=()

for arg in "$@"; do :
  case "$arg" in
    --rmx-port=*)
      a="${arg#*=}"
      javaOptions+=(
        "-Dcom.sun.management.jmxremote"
        "-Dcom.sun.management.jmxremote.ssl=false"
        "-Dcom.sun.management.jmxremote.authenticate=false"
        "-Dcom.sun.management.jmxremote.port=$a")
      ;;
    --debug-port=*)
      a="${arg#*=}"
      javaOptions+=("-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=$a")
      ;;
    --java-option=*)
      a="${arg#*=}"
      javaOptions+=("$a")
      ;;
    *)
      args+=("$arg")
  esac
done

logs="$directory"
export SCHEDULER_LOGS="$logs"  # Used in log4j2.xml
javaOptions+=("-Dlog4j.configurationFile=classpath:js7/log4j2.xml,$log4jXml")

execute=(
  "$java"
  "${javaOptions[@]}"
  "${standardJavaOptions[@]}"
  -classpath "$classpathString"
  "js7.tests.TestControllerAgent"
  "--directory=$directory"
  "${args[@]}"
)
echo "${execute[@]}"
exec "${execute[@]}"

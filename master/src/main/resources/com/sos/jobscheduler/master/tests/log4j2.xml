<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
  <appenders>
    <console name="console" target="SYSTEM_ERR">
      <patternLayout pattern="%highlight{%d{EE HH:mm:ss.SSS} [%thread] %-5level %logger - %message}%n"/>
    </console>
    <rollingRandomAccessFile name="file" fileName="${env:SCHEDULER_LOGS}/test.log" filePattern="${env:SCHEDULER_LOGS}/test-%d{yyyy-MM-dd}-%i.log.gz">
      <patternLayout pattern="%d{EE HH:mm:ss.SSS} [%thread] %-5level %logger - %message%n"/>
      <policies>
        <onStartupTriggeringPolicy/>
        <timeBasedTriggeringPolicy/>
        <sizeBasedTriggeringPolicy size="1GB"/>
      </policies>
    </rollingRandomAccessFile>
  </appenders>
  <loggers>
    <root level="DEBUG">
      <appenderRef ref="console" level="WARN"/>
      <appenderRef ref="file" level="INFO"/>
    </root>
  </loggers>
</configuration>
